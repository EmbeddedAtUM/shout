<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="100dip">
    <ImageView 
        android:id="@+id/avatar"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dip"
		android:layout_centerVertical="true"
        android:contentDescription="@string/avatarDesc" />
    <TextView
        android:id="@+id/origsender"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:textColor="@android:color/black" />
    <ImageView
        android:id="@+id/reshoutIcon"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_toRightOf="@+id/origsender"
        android:src="@drawable/reshouticon"
        android:contentDescription="@string/reshoutDesc" />
    <TextView
        android:id="@+id/sender"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="20dip"
        android:layout_toRightOf="@+id/reshoutIcon" />
	<TextView
	    android:id="@+id/message"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:layout_centerVertical="true"
	    android:layout_toRightOf="@+id/avatar"
        android:layout_marginLeft="20dip"
	    android:textColor="@android:color/black" />
	<TextView
	    android:id="@+id/comments"
	    android:layout_width="fill_parent"
	    android:layout_height="20dip"
	    android:layout_alignParentBottom="true"
	    android:gravity="left"
	    android:layout_marginBottom="5dip"
	    android:layout_marginLeft="5dip"
	    android:text="@string/comment"
	    android:textColor="@android:color/black" />
	<TextView
	    android:id="@+id/age"
	    android:layout_width="fill_parent"
	    android:layout_height="20dip"
	    android:layout_alignParentBottom="true"
	    android:gravity="right"
	    android:layout_marginBottom="5dip"
	    android:layout_marginRight="5dip"
	    android:textColor="@android:color/black" />
</RelativeLayout>