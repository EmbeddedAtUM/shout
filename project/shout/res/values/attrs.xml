<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ActionShoutView">
        <attr name="onReshoutClick" format="string" />
        <attr name="onCommentClick" format="string" />
        <attr name="onDetailsClick" format="string" />
    </declare-styleable>
    <declare-styleable name="DelegatedPreference">
        <attr name="android:dialogTitle" />
        <attr name="cancelText" format="string" />
    </declare-styleable>
    <declare-styleable name="BitmapPreference">
        <attr name="maxScaledHeight" format="integer" min="1" />
        <attr name="maxScaledWidth" format="integer" min="1" />
        <attr name="compressionQuality" format="integer" min="0" />
        <!--
         compressionFormat should be an Enum, not string, but the AAPT included
         with version 20 of Android SDK Tools segfaults when the Enum form is used.
           Change this when AAPT is fixed.
        -->
        <attr name="compressionFormat" format="string" />
        <attr name="maxCompressedSize" format="integer" min="1" />
    </declare-styleable>
    <declare-styleable name="DelegatedPreference">
        <attr name="android:dialogTitle" />
        <attr name="android:widgetLayout" />
    </declare-styleable>
    <declare-styleable name="ViewportLayout">
        <attr name="viewportWidth" format="reference" />
        <attr name="viewportHeight" format="reference" />
    </declare-styleable>

    <attr name="delegatedPreferenceStyle" format="reference" />
    <attr name="bitmapPreferenceStyle" format="reference" />
    <attr name="expandableViewStyle" format="reference" />
    <attr name="expandableViewTriggerStyle" format="reference" />
    <attr name="detailsFragmentReshoutItemStyle" format="reference" />
    <attr name="detailsFragmentCommentItemStyle" format="reference" />
    <attr name="detailsFragmentReshoutViewStyle" format="reference" />
    <attr name="detailsFragmentReshoutViewContentStyle" format="reference" />
    <attr name="detailsFragmentCommentViewStyle" format="reference" />
    <attr name="detailsFragmentCommentViewContentStyle" format="reference" />
    <attr name="detailsFragmentLocationViewStyle" format="reference" />
    <attr name="detailsFragmentLocationViewContentStyle" format="reference" />

    <declare-styleable name="ExpandableView">
        <attr name="expanded" format="boolean" />
        <attr name="icon" />
        <attr name="header" format="string" />
        <attr name="headerTextAppearance" format="reference" />
        <attr name="subheader" format="string" />
        <attr name="subheaderTextAppearance" format="reference" />
        <attr name="triggerPadding" format="dimension" />
        <attr name="triggerPaddingTop" format="dimension" />
        <attr name="triggerPaddingRight" format="dimension" />
        <attr name="triggerPaddingBottom" format="dimension" />
        <attr name="triggerPaddingLeft" format="dimension" />
        <attr name="triggerBackground" format="reference" />
    </declare-styleable>
    <declare-styleable name="ExpandableViewState">
        <attr name="state_expanded" format="boolean" />
    </declare-styleable>

    <attr name="avatarSize" format="dimension" />
    <attr name="senderTextAppearance" format="reference" />
    <attr name="timestampTextAppearance" format="reference" />
    <attr name="messageTextAppearance" format="reference" />

    <declare-styleable name="DetailsFragmentReshoutItem">
        <attr name="avatarSize" />
        <attr name="senderTextAppearance" />
        <attr name="timestampTextAppearance" />
    </declare-styleable>
    <declare-styleable name="DetailsFragmentCommentItem">
        <attr name="avatarSize" />
        <attr name="senderTextAppearance" />
        <attr name="timestampTextAppearance" />
        <attr name="messageTextAppearance" />
    </declare-styleable>
    <declare-styleable name="FullListView">
        <attr name="android:divider" />
        <attr name="android:dividerHeight" />
    </declare-styleable>

</resources>